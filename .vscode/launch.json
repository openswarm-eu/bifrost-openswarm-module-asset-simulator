    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug energy-community-asset-simulator (tsx)",
            "type": "node",
            "request": "launch",
            "program": "./energy-community-asset-simulator.ts",
            "runtimeExecutable": "tsx",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "MODULE_URL": "http://localhost:7032",
                "BIFROST_URL": "http://localhost:9091",
                "HOOK": "[100, 200]",
                "SAMPLING_RATE": "60",
                "REALITY_TWIN_MODE": "true"
            }
        },
        {
            "name": "Docker: Debug energy-community-asset-simulator (tsx)",
            "type": "node",
            "request": "launch",
            "program": "./energy-community-asset-simulator.ts",
            "runtimeExecutable": "tsx",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "MODULE_URL": "http://host.docker.internal:7032",
                "BIFROST_URL": "http://127.0.0.1:9091",
                "HOOK": "[100, 200]",
                "SAMPLING_RATE": "60",
                "REALITY_TWIN_MODE": "true"

            }
        },
        {
            "name": "Run energy-community-asset-simulator (production)",
            "type": "node",
            "request": "launch",
            "program": "./build/energy-community-asset-simulator.js",
            "preLaunchTask": "Build Backend",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "MODULE_URL": "http://localhost:7032",
                "BIFROST_URL": "http://localhost:9091",
                "NODE_ENV": "production",
                "HOOK": "[100, 200]",
                "SAMPLING_RATE": "60",
                "REALITY_TWIN_MODE": "true"
            }
        },
        {
            "name": "Docker: Run energy-community-asset-simulator (production)",
            "type": "node",
            "request": "launch",
            "program": "./build/energy-community-asset-simulator.js",
            "preLaunchTask": "Build Backend",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "MODULE_URL": "http://host.docker.internal:7032",
                "BIFROST_URL": "http://127.0.0.1:9091",
                "NODE_ENV": "production",
                "HOOK": "[100, 200]",
                "SAMPLING_RATE": "60",
                "REALITY_TWIN_MODE": "true"
            }
        },
    ]
}
