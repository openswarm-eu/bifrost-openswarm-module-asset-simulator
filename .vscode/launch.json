    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug energy-community-pv-simulator (tsx)",
            "type": "node",
            "request": "launch",
            "program": "./energy-community-pv-simulator.ts",
            "runtimeExecutable": "tsx",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}"
        },
        {
            "name": "Debug energy-community-pv-simulator production",
            "type": "node",
            "request": "launch",
            "program": "./build/energy-community-pv-simulator.js",
            "preLaunchTask": "Build Backend",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "MODULE_URL": "http://localhost:1808",
                "BIFROST_URL": "http://localhost:9091"
            }
        },
        {
            "name": "Debug energy-community-pv-simulator docker(tsx)",
            "type": "node",
            "request": "launch",
            "program": "./energy-community-pv-simulator.ts",
            "runtimeExecutable": "tsx",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "MODULE_URL": "http://host.docker.internal:1808",
                "BIFROST_URL": "http://127.0.0.1:9091"
            }
        },
        {
            "name": "Debug energy-community-pv-simulator production docker",
            "type": "node",
            "request": "launch",
            "program": "./build/energy-community-pv-simulator.js",
            "preLaunchTask": "Build Backend",
            "console": "integratedTerminal",
            "cwd": "${workspaceFolder}",
            "env": {
                "MODULE_URL": "http://host.docker.internal:1808",
                "BIFROST_URL": "http://127.0.0.1:9091"
            }
        },
    ]
}
